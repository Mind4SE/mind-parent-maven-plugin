<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.ow2.mind</groupId>
		<artifactId>mind-maven-archetypes-parent</artifactId>
		<version>2.1-SNAPSHOT</version>
	</parent>

	<artifactId>mind-maven-archetype-application</artifactId>
	<packaging>maven-plugin</packaging>
	<name>Mind application Maven archetype</name>

	<!-- Because of a bug in the maven-site-plugin, the URL of the project MUST 
		ends with a '/' which is not the case when using the basic maven
		inheritance mechanism -->
	<url>${mind.home.url}/maven-parent/${project.parent.artifactId}/${project.artifactId}/</url>

	<description>
		This archetype is useful to quick start Mind applications, having a
		source tree template already filled.
	</description>

	<scm>
		<connection>scm:svn:svn://svn.forge.objectweb.org/svnroot/fractal/tags/mind-2.1.0/maven/archetypes/maven-archetype-mind-application</connection>
		<developerConnection>scm:svn:svn+ssh://svn.forge.objectweb.org/svnroot/fractal/tags/mind-2.1.0/maven/archetypes/maven-archetype-mind-application</developerConnection>
		<url>http://svn.forge.objectweb.org/cgi-bin/viewcvs.cgi/fractal/tags/mind-2.1.0/maven/archetypes/maven-archetype-mind-application</url>
	</scm>

	<developers>
		<developer>
			<id>apace</id>
			<name>Alessio Pace</name>
			<email>alessio.pace@gmail.com</email>
		</developer>
		<developer>
			<id>leclerq</id>
			<name>Matthieu Leclercq</name>
			<email>matthieu.leclercq@st.com</email>
		</developer>
		<developer>
			<id>tous</id>
			<name>Julien Tous</name>
			<email>julien.tous@non.schneider-electric.com</email>
		</developer>
	</developers>

	<dependencies>
		<!-- Following dependencies are declared for integration tests since 
			they are used for building modules generated by this archetype. -->
		<!--  <dependency>
			<groupId>org.ow2.mind</groupId>
			<artifactId>mind-baselib</artifactId>
